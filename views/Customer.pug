extends layout

block content
    h1= title
    - let items=results;
    div.container-fluid
        div(class="row m-1")
            each item,ind in items
                - let destination = `dispatch(\"/customer/update?id=${item._id}\")`
                div(class="row-sm-2", class="m-1")
                    p Name  is #{item.Cust_Name}
                    p Age  is #{item.Cust_Age}
                    p Mail_Id: #{item.Mail_Id}
                    button.btn( class="btn-primary ml-1", onclick= destination) Update
    script. 
        function dispatch(path){
            window.location.href=path
        }